# Simple commit message validation
# You can install @commitlint/cli and @commitlint/config-conventional for more robust validation
if ! grep -qE "^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .+" "$1"; then
  echo "‚ùå Invalid commit message format."
  echo "Please use conventional commit format: <type>(<scope>): <description>"
  echo "Examples:"
  echo "  feat: add new feature"
  echo "  fix(auth): resolve login issue"
  echo "  docs: update README"
  echo "  style: format code"
  echo "  refactor: improve code structure"
  echo "  test: add unit tests"
  echo "  chore: update dependencies"
  exit 1
fi 